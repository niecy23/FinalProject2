@model User

<h2>Create a New User</h2>

@using (Html.BeginForm("InsertUserToDatabase", "User", "Post"))
{
    <input asp-for="UserID" type="hidden" value="" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="datetime" name="LastName" class="form-control" value="" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" name="EmailAddress" class="form-control" value="" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select an Event</label>
        <select class="form-control" name="EventID" value="">
            @foreach (var instance in Model.Events)
            {
                <option value="@instance.EventID">@instance.EventID @instance.EventName</option>
            }
        </select>
    </div>

    <input type="submit" value="Create User" class="btn btn-primary" />
}
