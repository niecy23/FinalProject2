@model Event

<h2>Create a New Event</h2>

@using (Html.BeginForm("InsertEventToDatabase", "Event", "Post"))
{
    <input asp-for="EventID" type="hidden" value="" />

    <label asp-for="EventName" class="control-label">Event Name</label>
    <input type="text" name="Event Name" class="form-control" value="" />

    <label asp-for="DateAndTime" class="control-label">Date and Time</label>
    <input type="datetime" name="Date and Time" class="form-control" value="" />

    <label asp-for="Location" class="control-label">Location</label>
    <input type="text" name="Location" class="form-control" value="" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="" />

    <input type="submit" value="Create Product" class="btn btn-primary" />
}

