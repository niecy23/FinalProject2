@model RSVP

<h3>@Model.RSVPID Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Event ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
    <tr>
        <td>@Model.RSVPID</td>
        <td>@Model.EventID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
    </tr>
</table>

<div style="display: block">
    <a href="/RSVP/UpdateRSVP/@Model.RSVPID">Update this RSVP</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteRSVP", "RSVP", "Post"))
    {
        <input type="hidden" asp-for="RSVPID" value="@Model.RSVPID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this RSVP" />
    }
</div>

