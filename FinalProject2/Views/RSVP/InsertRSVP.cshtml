@model RSVP

<h2>Create a New RSVP</h2>

@using (Html.BeginForm("InsertRSVPToDatabase", "RSVP", "Post"))
{
    <input asp-for="RSVPID" type="hidden" value="" />

    <label asp-for="EventID" class="control-label">Event ID</label>
    <input type="number" name="Event ID" class="form-control" value="" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="First Name" class="form-control" value="" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="Last Name" class="form-control" value="" />

    <input type="submit" value="Create RSVP" class="btn btn-primary" />
}

